#paredes frontais
Group{
  children[
    Transform{
      rotation 0 1 0 -0.78
      translation 1.1 0.7 2.26
      children[
        Shape{
          appearance DEF concreto Appearance{
            material Material{
              diffuseColor 0.6 0.6 0.6
            }
          }
          geometry DEF small_wall Box{size 1 1.5 0.1}
        }
        Transform{
          rotation 0 1 0 1.57
          translation -1.5 0 1.5
          children[
            Shape{
              appearance USE concreto
              geometry USE small_wall
            }
          ]
        }
      ]
    }
  ]
}

Transform{
  translation 0 0.7 2
  scale 1.5 1 1
  children[
    Shape{
      appearance USE concreto
      geometry USE small_wall
    }
  ]
}

