      rotation 0 1 0.2 -0.29
      children[
        Shape{
          appearance USE concreto
          geometry DEF side_triangle IndexedFaceSet{
            solid FALSE 
            coord Coordinate{
              point[1.05 1.5 0, 1 1.5 -3.4, 0.95 2.55 -3.4]
            }
            coordIndex[2 1 0 -1]
            }
        }
        Transform{
          translation  -2.65 -0.22 1.39
          rotation 0 1 0 0.52
          children[
            Shape{
              appearance USE concreto
              geometry USE side_triangle
            }
          ]
        }
      ]
    }
  ]
}

