#VRML V2.0 utf8

#Muro frontal


Group{
  children[
     Shape{
      appearance DEF base_color Appearance {
        material Material{
          diffuseColor 0.6 0.6 0.6
        }
      }geometry DEF small_wall Box {
        size 2 1.5 0.1
      }}
      Transform{
        rotation 0 1 0 -0.25
        translation 1 0 0
        children[
          Shape {
            appearance USE base_color
            geometry USE small_wall
          }
          Transform{
            rotation 0 1 0 0.56
            translation -2 0 0.54
            children[
              Shape{
                appearance USE base_color
                geometry USE small_wall
              }]}]}]}

